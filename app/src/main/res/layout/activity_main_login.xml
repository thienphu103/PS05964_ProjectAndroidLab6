<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a.assignmnet.MainActivityLogin">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="116dp"
            android:layout_height="129dp"
            android:layout_alignStart="@+id/btnLogin"

            android:contentDescription=""
            app:layout_constraintHorizontal_bias="0.463"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/a"
            tools:ignore="ContentDescription" />

        <EditText

            android:id="@+id/txtUser"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:drawableLeft="@drawable/person"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintBottom_toTopOf="@+id/txtPass"
            tools:ignore="HardcodedText,LabelFor,RtlHardcoded"
            tools:layout_editor_absoluteX="68dp" />

        <EditText

            android:id="@+id/txtPass"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtUser"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/pass"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:text=""
            tools:ignore="HardcodedText,LabelFor,RtlHardcoded"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="218dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="112dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="24dp"
            android:background="#0E3047"
            android:text="Login"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="274dp"
            android:layout_below="@+id/checkInfo"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/txtTest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtPass"
            android:layout_below="@+id/txtUser"
            android:layout_marginStart="7dp"
            android:layout_marginTop="12dp"
            android:text="" />

        <TextView
            android:id="@+id/txtTest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtTest1"
            android:layout_below="@+id/txtPass"
            android:layout_marginTop="13dp"
            android:text="" />

        <Button
            android:id="@+id/txtTest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:background="@null"
            android:text="Not a member? Sign up now !"
            android:textSize="10dp"
            android:textStyle="normal" />

        <CheckBox
            android:id="@+id/checkInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtPass"
            android:layout_below="@+id/txtTest2"
            android:text="Remember Password"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="286dp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>